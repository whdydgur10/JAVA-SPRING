<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
    <!-- (1) 레이아웃을 적용하지않는화면-->    
    <definition name=".nonBaseLayout" template="/WEB-INF/views/layout/nonBaseLayout.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="middle" value="" />        
        <put-attribute name="footer" value="" />
    </definition>
 
    <!-- (2) 레이아웃을 적용하는화면-->
    <definition name=".root" template="/WEB-INF/views/layout/baseLayout.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
        <put-attribute name="middle" value="/WEB-INF/views/common/middle.jsp" />        
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
    </definition>
    
    <!-- (1) -->    
    <definition name="/user/*" extends=".nonBaseLayout">
      <put-attribute name="body" value="/WEB-INF/views/user/{1}.jsp" />
    </definition>
 
    <!-- (2) -->
   <definition name="/*/*" extends=".root">      
      <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>
